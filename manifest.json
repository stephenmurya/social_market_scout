{
    "manifest_version": 3,
    "name": "Social Market Scout",
    "version": "4.1.0",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "https://openrouter.ai/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/*",
                "https://www.facebook.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}